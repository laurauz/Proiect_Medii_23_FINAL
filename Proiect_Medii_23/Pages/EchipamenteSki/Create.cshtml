@page
@model Proiect_Medii_23.Pages.EchipamenteSki.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>EchipamentSki</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EchipamentSki.Title" class="control-label"></label>
                <input asp-for="EchipamentSki.Title" class="form-control" />
                <span asp-validation-for="EchipamentSki.Title" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="EchipamentSki.SizeDetailsID" class="control-label">Author Name</label>
                <select asp-for="EchipamentSki.SizeDetailsID" class="form-control" asp-items="ViewBag.SizeDetailsID">
                </select>
                <span asp-validation-for="EchipamentSki.SizeDetailsID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EchipamentSki.Price" class="control-label"></label>
                <input asp-for="EchipamentSki.Price" class="form-control" />
                <span asp-validation-for="EchipamentSki.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EchipamentSki.StocDate" class="control-label"></label>
                <input asp-for="EchipamentSki.StocDate" class="form-control" />
                <span asp-validation-for="EchipamentSki.StocDate" class="text-
danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EchipamentSki.BrandID" class="control-label">Brand Name</label>
                <select asp-for="EchipamentSki.BrandID" class="form-control" asp-items="ViewBag.BrandID">
                </select>
                <span asp-validation-for="EchipamentSki.BrandID" class="text-danger"></span>
            </div>

            <div class="form-group">
                    <div class="table">
                        <table>
                            <tr>
                                @{
                                    int cnt = 0;

                                    foreach (var cat in Model.AssignedCategoryDataList)
                                    {
                                        if (cnt++ % 3 == 0)
                                        {
                                            @:</tr><tr>
                                        }
                                        @:<td>
                                            <input type="checkbox"
                                                   name="selectedCategories"
                                                   value="@cat.CategoryID"
                                                    @(Html.Raw(cat.Assigned ?
"checked=\"checked\"" : "")) />
                                            @cat.CategoryID @: @cat.Name
                                        @:</td>
                                        }
                                    @:</tr>
                                    }
                        </table>
                    </div>
                </div>

                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-page="Index">Back to List</a>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
